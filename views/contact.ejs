<div class="row">
  <div class="col-lg-8">
    <h2 class="mb-3">Contact Me</h2>
    <% if (submitted) { %>
      <div class="alert alert-success">Thanks <strong><%= name %></strong> â€” I received your message and will get back to you at <em><%= email %></em>.</div>
    <% } %>
    <form action="/contact" method="post" class="row g-3">
      <div class="col-md-6">
        <label class="form-label">Name</label>
        <input name="name" class="form-control" required>
      </div>
      <div class="col-md-6">
        <label class="form-label">Email</label>
        <input name="email" type="email" class="form-control" required>
      </div>
      <div class="col-12">
        <label class="form-label">Message</label>
        <textarea name="message" rows="5" class="form-control" required></textarea>
      </div>
      <div class="col-12">
        <button class="btn btn-primary"><i class="fa-solid fa-paper-plane"></i> Send</button>
      </div>
    </form>
  </div>
  <div class="col-lg-4">
    <div class="p-3 bg-light rounded-4 mt-4 mt-lg-0">
      <h5><i class="fa-solid fa-location-dot"></i> Based in</h5>
      <p>Toronto, Canada</p>
    </div>
  </div>
</div>
